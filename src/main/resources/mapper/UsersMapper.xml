<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UsersMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.demo.entity.Users">
        <id column="id" property="id" />
        <result column="email" property="email" />
        <result column="password" property="password" />
        <result column="logged_in" property="loggedIn" />
        <result column="user_token" property="userToken" />
        <result column="token_expiration" property="tokenExpiration" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, email, password, logged_in, user_token, token_expiration
    </sql>

</mapper>

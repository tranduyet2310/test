<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserAddressesMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.demo.entity.UserAddresses">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="contact_name" property="contactName" />
        <result column="phone_number" property="phoneNumber" />
        <result column="province" property="province" />
        <result column="street" property="street" />
        <result column="ward" property="ward" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, contact_name, phone_number, province, street, ward
    </sql>

</mapper>

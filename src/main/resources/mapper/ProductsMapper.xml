<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.ProductsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.demo.entity.Products">
        <id column="id" property="id" />
        <result column="product_name" property="productName" />
        <result column="price" property="price" />
        <result column="quantity" property="quantity" />
        <result column="date_created" property="dateCreated" />
        <result column="date_updated" property="dateUpdated" />
        <result column="unit" property="unit" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, product_name, price, quantity, date_created, date_updated, unit
    </sql>

</mapper>
